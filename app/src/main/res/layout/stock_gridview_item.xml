<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl_stock_item"
    android:background="@drawable/stock_gv_normal_bg">

    <TextView
        android:id="@+id/tv_stock_name"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/filter_text_color"
        android:text="仓库"
        android:gravity="center"
        android:padding="@dimen/qb_px_8" />

    <ImageView
        android:id="@+id/iv_gv_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_gv_choose"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/tv_stock_name"
        android:visibility="invisible"/>
</RelativeLayout>