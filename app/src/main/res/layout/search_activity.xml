<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/bg_main"
    tools:context="com.nj.zddemo.ui.activity.SearchActivity"
    android:orientation="vertical">

    <include layout="@layout/search_title_layout" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_condition"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white">
    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_light"
        android:gravity="center"
        android:padding="@dimen/qb_px_6">

        <Button
            android:id="@+id/btn_speaker"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/qb_px_30"
            android:background="@drawable/speaker_search_bg"
            android:drawableLeft="@drawable/icon_speaker"
            android:drawablePadding="@dimen/qb_px_8"
            android:paddingLeft="@dimen/qb_px_25"
            android:paddingRight="@dimen/qb_px_25"
            android:text="@string/condition_speaker_text"
            android:textSize="14sp"/>
    </LinearLayout>

</LinearLayout>
