<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    app:cardCornerRadius="@dimen/qb_px_6"
    app:elevation="@dimen/qb_px_5"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/qb_px_2"
    android:layout_marginLeft="@dimen/qb_px_2"
    android:layout_marginRight="@dimen/qb_px_2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/qb_px_4">

        <com.nj.zddemo.view.RoundImageView
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_140"
            app:type="round"
            app:borderRadius="@dimen/qb_px_1"
            android:src="@drawable/icon_part"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品名称"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:lines="1"
            android:paddingLeft="@dimen/qb_px_8"
            android:paddingRight="@dimen/qb_px_8"/>

        <TextView
            android:id="@+id/tv_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="配件编码"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:lines="1"
            android:paddingLeft="@dimen/qb_px_8"
            android:paddingRight="@dimen/qb_px_8"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/qb_px_8"
            android:paddingRight="@dimen/qb_px_8">

            <TextView
                android:id="@+id/tv_tp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:lines="1"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:text="图号"/>

            <TextView
                android:id="@+id/tv_brand"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:lines="1"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:text="品牌"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/qb_px_8"
            android:paddingRight="@dimen/qb_px_8">

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:lines="1"
                android:text="车型"
                android:textColor="@color/gray"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_place"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:lines="1"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:text="产地"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/qb_px_8"
            android:paddingRight="@dimen/qb_px_8">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textColor="@color/orange"
                android:textSize="14sp"
                android:text="¥"/>

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:lines="1"
                android:textColor="@color/orange"
                android:textSize="14sp"
                android:text="¥"/>

            <TextView
                android:id="@+id/tv_stock"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:lines="1"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="14sp"
                android:text="库存"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_zoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_zoom_in"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"/>
    </LinearLayout>

</android.support.v7.widget.CardView>