<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/qb_px_50"
    android:paddingLeft="@dimen/qb_px_10"
    android:gravity="center_vertical">

    <Button
        android:layout_width="0dp"
        android:layout_height="@dimen/qb_px_35"
        android:text="查找配件"
        android:drawableLeft="@drawable/icon_search"
        android:drawablePadding="@dimen/qb_px_4"
        android:layout_weight="1"
        android:gravity="start|center_vertical"
        android:background="@drawable/btn_page_title_bg"/>

    <ImageView
        android:layout_width="@dimen/qb_px_40"
        android:layout_height="@dimen/qb_px_40"
        android:src="@drawable/icon_scan_page"
        android:padding="@dimen/qb_px_10"/>

</LinearLayout>