<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:id="@+id/constraintlayout_in"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="@dimen/qb_px_70"
        android:layout_height="@dimen/qb_px_70"
        android:src="@drawable/icon_part"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="@dimen/qb_px_7"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="商品名称"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:lines="1"
        app:layout_constraintLeft_toRightOf="@+id/iv_image"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/qb_px_10"
        android:layout_marginTop="@dimen/qb_px_5"/>

    <TextView
        android:id="@+id/tv_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(配件编码)"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:lines="1"
        app:layout_constraintLeft_toRightOf="@+id/tv_name"
        app:layout_constraintTop_toTopOf="@+id/tv_name"/>

    <TextView
        android:id="@+id/tv_tp_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="图号："
        android:textColor="@color/gray"
        app:layout_constraintLeft_toRightOf="@+id/iv_image"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        android:layout_marginLeft="@dimen/qb_px_10"/>

    <TextView
        android:id="@+id/tv_tp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10001"
        android:textColor="@color/gray"
        app:layout_constraintLeft_toRightOf="@+id/tv_tp_text"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"/>

    <TextView
        android:id="@+id/tv_type_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="车型："
        android:textColor="@color/gray"
        app:layout_constraintLeft_toRightOf="@+id/iv_image"
        app:layout_constraintTop_toBottomOf="@+id/tv_tp_text"
        android:layout_marginLeft="@dimen/qb_px_10"/>

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2001"
        android:textColor="@color/gray"
        app:layout_constraintLeft_toRightOf="@+id/tv_type_text"
        app:layout_constraintTop_toBottomOf="@+id/tv_tp_text"/>

    <TextView
        android:id="@+id/tv_brand_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="品牌："
        android:textColor="@color/gray"
        app:layout_constraintLeft_toRightOf="@+id/iv_image"
        app:layout_constraintTop_toBottomOf="@+id/tv_type_text"
        android:layout_marginLeft="@dimen/qb_px_10"/>

    <TextView
        android:id="@+id/tv_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="品牌："
        android:textColor="@color/gray"
        app:layout_constraintLeft_toRightOf="@+id/tv_brand_text"
        app:layout_constraintTop_toBottomOf="@+id/tv_type_text"/>

    <TextView
        android:id="@+id/tv_place_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="产地："
        android:textColor="@color/gray"
        app:layout_constraintLeft_toRightOf="@+id/tv_brand_text"
        app:layout_constraintTop_toBottomOf="@+id/tv_type"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/tv_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="001"
        android:textColor="@color/gray"
        app:layout_constraintLeft_toRightOf="@+id/tv_place_text"
        app:layout_constraintTop_toBottomOf="@+id/tv_type"/>

    <TextView
        android:id="@+id/tv_price_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="一级销价："
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toRightOf="@+id/iv_image"
        app:layout_constraintTop_toBottomOf="@+id/tv_place"
        android:layout_marginLeft="@dimen/qb_px_10"/>

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:textColor="@color/orange"
        app:layout_constraintLeft_toRightOf="@+id/tv_price_text"
        app:layout_constraintTop_toBottomOf="@+id/tv_place"/>

    <View
        android:id="@+id/divide"
        android:layout_width="@dimen/qb_px_1"
        android:layout_height="@dimen/qb_px_20"
        android:background="@color/color_frame"
        app:layout_constraintLeft_toRightOf="@+id/iv_image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/tv_price"/>

    <TextView
        android:id="@+id/tv_stock_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="总库存："
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toRightOf="@+id/divide"
        app:layout_constraintTop_toBottomOf="@+id/tv_place"
        android:layout_marginLeft="@dimen/qb_px_10"/>

    <TextView
        android:id="@+id/tv_stock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/tv_stock_text"
        app:layout_constraintTop_toBottomOf="@+id/tv_place"/>

    <ImageView
        android:id="@+id/iv_zoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_zoom_in"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/qb_px_1"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/color_frame"
        android:layout_marginRight="@dimen/qb_px_7"/>

</android.support.constraint.ConstraintLayout>