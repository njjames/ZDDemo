<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/qb_px_4"
    android:paddingBottom="@dimen/qb_px_4"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/tv_condition"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="16sp"
        android:textColor="@color/filter_text_color"
        android:paddingLeft="@dimen/qb_px_15"
        android:text="11111"/>

    <ImageView
        android:id="@+id/iv_left_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_left_up"
        android:padding="@dimen/qb_px_4"/>
</LinearLayout>